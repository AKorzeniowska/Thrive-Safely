<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChosenPlantActivity"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/plant_name_textview"
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="501dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textColor="@color/main_title"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/plant_species_textview"
        android:layout_width="251dp"
        android:layout_height="27dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="165dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name_textview" />

    <TextView
        android:id="@+id/watering_intro"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="cursive"
        android:text="@string/watering_intro_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fertilizing_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_species_textview" />

    <TextView
        android:id="@+id/fertilizing_intro"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="cursive"
        android:text="@string/fertilizing_info_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/min_temp_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watering_intro" />

    <TextView
        android:id="@+id/min_temp_intro"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="cursive"
        android:text="@string/acceptable_temperature_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fertilizing_intro"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/watering_frequency_text"
        android:layout_width="107dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="53dp"
        android:fontFamily="cursive"
        android:text="@string/how_often_text"
        android:textColor="@color/main_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fertilizing_frequency_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/watering_intro"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fertilizing_frequency_text"
        android:layout_width="107dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="53dp"
        android:fontFamily="cursive"
        android:text="@string/how_often_text"
        android:textColor="@color/main_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/acceptable_temperature_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fertilizing_intro"
        app:layout_constraintTop_toBottomOf="@+id/watering_frequency_text" />

    <TextView
        android:id="@+id/acceptable_temperature_text"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="185dp"
        android:fontFamily="cursive"
        android:text="@string/higher_than_temp_text"
        android:textColor="@color/main_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fertilizing_intro"
        app:layout_constraintTop_toBottomOf="@+id/fertilizing_frequency_text" />

    <Button
        android:onClick="editPlant"
        android:id="@+id/edit_plant_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="30dp"
        android:background="@color/main_title"
        android:fontFamily="cursive"
        android:text="@string/edit_plant_button"
        android:textAllCaps="false"
        android:textColor="@color/main_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/delete_plant_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/min_temp_intro" />

    <Button
        android:onClick="deletePlantButton"
        android:id="@+id/delete_plant_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:background="@color/main_title"
        android:fontFamily="cursive"
        android:text="@string/delete_plant_button"
        android:textAllCaps="false"
        android:textColor="@color/main_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_plant_button"
        app:layout_constraintTop_toBottomOf="@+id/min_temp_intro" />
</android.support.constraint.ConstraintLayout>